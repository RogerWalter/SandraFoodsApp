<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SandraFoodsApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/laranja</item>
        <item name="colorPrimaryDark">@color/laranja</item>
        <item name="colorAccent">@color/laranja</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="checkboxStyle">@style/MyCheckboxStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">650dp</item>
        <item name="android:background">@drawable/background_dialogo_arredondado</item>
    </style>

    <style name="CustomShowCaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#E6FFFFFF</item>
        <item name="sv_showcaseColor">@color/laranja</item>
        <item name="sv_buttonText">Entendido!</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_buttonBackgroundColor">@color/marrom</item>
        <item name="sv_buttonForegroundColor">@color/branco</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomContent</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@color/marrom</item>
    </style>
    <style name="CustomContent" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">@color/marrom</item>
    </style>

    <style name="MyCheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColorSecondary">@color/marrom</item>
        <item name="buttonTint">@color/laranja</item>
        <item name="android:textColor">@color/marrom</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
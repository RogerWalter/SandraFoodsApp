<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bsAlterarNomeCliente"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialogo_arredondado">

    <Button
        android:id="@+id/btDialogoAlterarNomeSalvar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_botao_arredondado"
        android:padding="8dp"
        android:text="Salvar Alteração"
        android:textColor="@color/branco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btDialogoAlterarNomeCancelar"
        app:layout_constraintTop_toBottomOf="@+id/etDialogoAlterarNome" />

    <Button
        android:id="@+id/btDialogoAlterarNomeCancelar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/background_botao_arredondado"
        android:padding="8dp"
        android:text="Cancelar"
        android:textColor="@color/branco"
        app:layout_constraintBottom_toBottomOf="@+id/btDialogoAlterarNomeSalvar"
        app:layout_constraintEnd_toStartOf="@+id/btDialogoAlterarNomeSalvar"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btDialogoAlterarNomeSalvar" />

    <TextView
        android:id="@+id/tvDialogoAlterarNome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="Informe o Nome:"
        android:textColor="@color/marrom"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/etDialogoAlterarNome"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/etDialogoAlterarNome" />

    <EditText
        android:id="@+id/etDialogoAlterarNome"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/drawable_textbox"
        android:gravity="center|left"
        android:hint="Seu nome"
        android:imeOptions="actionDone"
        android:inputType="textCapSentences"
        android:maxLength="40"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textColor="@color/marrom"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvDialogoAlterarNome"
        app:layout_constraintTop_toBottomOf="@+id/tvDialogoNomeTitulo" />

    <TextView
        android:id="@+id/tvDialogoNomeTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_botao_arredondado"
        android:gravity="center"
        android:padding="4dp"
        android:text="Alterar Nome"
        android:textColor="@color/branco"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>